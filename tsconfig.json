{
    "compilerOptions": {
        "target": "ES2020",
        "module": "node16",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "dist",
        "declaration": true,
        "composite": true,
        "sourceMap": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
        "paths": {
            "@opendocsg/pdf2md": ["./src/types/pdf2md.d.ts"]
        }
    },
    "include": ["./src"],
    "exclude": ["node_modules", "dist"]
}